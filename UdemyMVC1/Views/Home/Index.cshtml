@model IEnumerable<UdemyMVC1.Models.Contact>//to access to the model and read info from db
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">Contacts with .NET8 MVC</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Create" asp-controller="home" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus">New User</i>
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>List of Users</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsers" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                                    <th>@Html.DisplayNameFor(m => m.Phone)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var contact in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => contact.Id)</td>
                                        <td>@Html.DisplayFor(m => contact.Name)</td>
                                        <td>@Html.DisplayFor(m => contact.Phone)</td>
                                        <td>@Html.DisplayFor(m => contact.Email)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@contact.Id"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@contact.Id"><i class="fa-solid fa-trash"></i> Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>There are not registers</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>